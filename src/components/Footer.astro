---
import footerData from '../data/footer.json';
---

<footer class="footer">
  <!-- Removed floating decorative elements for a more formal look -->
  
  <!-- Curved top border -->


  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <div class="brand-header">
          <h3>{footerData.brand.name}</h3>
        </div>
        <p class="brand-description">{footerData.brand.description}</p>
       
      </div>
      
      <div class="footer-section footer-links">
        <h4 class="section-title">
          {footerData.navigation.title}
        </h4>
        <ul class="links-list">
          {footerData.navigation.links.map(link => (
            <li><a href={link.href} class="footer-link">{link.label}</a></li>
          ))}
        </ul>
      </div>
      
      <div class="footer-section footer-services">
        <h4 class="section-title">
          {footerData.services.title}
        </h4>
        <ul class="services-list">
          {footerData.services.items.map(item => (
            <li class="service-item">{item}</li>
          ))}
        </ul>
      </div>
      
      <div class="footer-section footer-contact">
        <h4 class="section-title">
          {footerData.contact.title}
        </h4>
        <div class="contact-list">
          {footerData.contact.items.map(item => (
            <div class="contact-item">
              <div class="contact-content">
                {item.link ? (
                  <a href={item.link} class="contact-link">{item.text}</a>
                ) : (
                  <span class="contact-text">{item.text}</span>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <div class="footer-copyright">
        <p>{footerData.copyright}</p>
      </div>
      <div class="footer-social">
       
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #2c2c2c;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.9);
    position: relative;
    padding: 40px 0 20px;
  }

  /* Removed decorative curve for cleaner look */

  /* Removed floating decoration styles for a more formal appearance */

  .footer-curve {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 60px;
    color: rgba(255, 255, 255, 0.1);
    transform: translateY(-1px);
  }

  .container {
    position: relative;
    z-index: 2;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 30px;
    margin-bottom: 25px;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .brand-header {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 10px;
  }

  .footer-brand h3 {
    font-family: 'Dancing Script', cursive;
    font-size: 2rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
  }

  .brand-decoration {
    font-size: 1rem;
    opacity: 0.5;
  }

  .brand-description {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.5;
    margin: 0;
    font-size: 1rem;
    font-weight: 400;
  }

  .brand-quote {
    font-family: 'Dancing Script', cursive;
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.6);
    font-style: italic;
    margin-top: 10px;
    opacity: 0.8;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .section-title {
    font-family: 'Dancing Script', cursive;
    font-size: 1.3rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 15px;
    position: relative;
  }

  .title-icon {
    font-size: 1.2rem;
  }

  .links-list,
  .services-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer-link {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    padding: 8px 0;
    border-bottom: 1px solid transparent;
    position: relative;
  }

  .footer-link::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #8d6e63, #5d4037);
    transition: width 0.3s ease;
  }

  .footer-link:hover {
    color: rgba(255, 255, 255, 0.9);
    transform: translateX(5px);
  }

  .footer-link:hover::before {
    width: 100%;
  }

  .service-item {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.95rem;
    font-weight: 400;
    padding: 5px 0;
    position: relative;
    padding-left: 20px;
  }

  .service-item::before {
    content: 'â€¢';
    position: absolute;
    left: 0;
    top: 5px;
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.5);
  }

  .contact-list {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .contact-item {
    display: flex;
    align-items: flex-start;
    padding: 6px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.2s ease;
  }

  .contact-item:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  .contact-item:last-child {
    border-bottom: none;
  }

  .contact-content {
    flex: 1;
  }

  .contact-link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .contact-link:hover {
    color: rgba(255, 255, 255, 0.9);
  }

  .contact-text {
    color: rgba(255, 255, 255, 0.7);
    font-weight: 400;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 20px;
    margin-top: 30px;
    border-top: 1px solid rgba(160, 82, 45, 0.1);
    position: relative;
  }

  .footer-copyright {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .footer-copyright p {
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
    font-size: 0.9rem;
    font-weight: 400;
  }

  .copyright-decoration {
    font-size: 1rem;
    /* Removed sparkle animation for more formal look */
  }

  .footer-social {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 15px;
  }

  .social-title {
    font-family: 'Dancing Script', cursive;
    font-size: 1.2rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
  }

  .social-links {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
  }

  .social-link {
    display: inline-block;
    padding: 8px 12px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .social-link:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-1px);
  }

  .social-label {
    font-size: 0.8rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    text-transform: capitalize;
    transition: all 0.3s ease;
  }

  .social-link:hover .social-label {
    color: rgba(255, 255, 255, 0.9);
  }

  @media (max-width: 768px) {
    .footer {
      padding: 60px 0 20px;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }

    .footer-brand {
      align-items: center;
    }

    .brand-header {
      justify-content: center;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 25px;
      text-align: center;
    }

    .footer-social {
      align-items: center;
    }

    .social-links {
      justify-content: center;
      flex-wrap: wrap;
    }

    .floating-shape {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .footer-brand h3 {
      font-size: 1.8rem;
    }

    .social-link {
      padding: 12px;
    }

    .social-links {
      gap: 10px;
    }
  }
</style>