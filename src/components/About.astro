---
import aboutData from '../data/about.json';
---

<section id="sobre-mi" class="about section-padding">
  <div class="container">
    <div class="about-content">
      <div class="about-image">
        <div class="image-wrapper">
          <img 
            src={aboutData.image}
            alt={aboutData.image_alt}
            loading="lazy"
          />
          <div class="experience-badge">
            <span class="years">{aboutData.experience}+</span>
            <span class="text">{aboutData.experience_label}</span>
          </div>
        </div>
      </div>
      
      <div class="about-text">
        <h2 class="section-title">{aboutData.title}</h2>
        <h3 class="about-subtitle">{aboutData.subtitle}</h3>
        
        <p class="about-description">
          {aboutData.description1}
        </p>
        
        <p class="about-description">
          {aboutData.description2}
        </p>
        
        <div class="skills">
          {aboutData.skills.map(skill => (
            <div class="skill-item">
              <div class="skill-icon">{skill.icon}</div>
              <h4>{skill.title}</h4>
              <p>{skill.description}</p>
            </div>
          ))}
        </div>
        
        <a href="#contacto" class="btn">{aboutData.button_text}</a>
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    background: linear-gradient(180deg, var(--color-white) 0%, var(--color-light) 100%);
    position: relative;
  }

  .about::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-accent), transparent);
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }

  .about-image {
    position: relative;
  }

  .image-wrapper {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: var(--shadow-medium);
  }

  .image-wrapper img {
    width: 100%;
    height: 600px;
    object-fit: cover;
    display: block;
  }

  .experience-badge {
    position: absolute;
    bottom: 30px;
    right: 30px;
    background: var(--color-white);
    padding: 20px;
    border-radius: 15px;
    text-align: center;
    box-shadow: var(--shadow-medium);
  }

  .years {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-accent);
    font-family: var(--font-heading);
  }

  .text {
    font-size: 0.9rem;
    color: var(--color-gray);
    font-weight: 500;
  }

  .section-title {
    font-size: 2.5rem;
    margin-bottom: 10px;
    color: var(--color-primary);
  }

  .about-subtitle {
    font-size: 1.3rem;
    color: var(--color-secondary);
    margin-bottom: 30px;
    font-weight: 400;
  }

  .about-description {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--color-gray);
    margin-bottom: 25px;
  }

  .skills {
    display: grid;
    gap: 25px;
    margin: 40px 0;
  }

  .skill-item {
    display: flex;
    align-items: flex-start;
    gap: 15px;
  }

  .skill-icon {
    font-size: 1.5rem;
    width: 50px;
    height: 50px;
    background: var(--color-light);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .skill-item h4 {
    font-size: 1.1rem;
    margin-bottom: 5px;
    color: var(--color-primary);
  }

  .skill-item p {
    color: var(--color-gray);
    font-size: 0.95rem;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .about-content {
      grid-template-columns: 1fr;
      gap: 50px;
    }

    .section-title {
      font-size: 2rem;
      text-align: center;
    }

    .about-subtitle {
      text-align: center;
    }

    .image-wrapper img {
      height: 400px;
    }

    .experience-badge {
      bottom: 20px;
      right: 20px;
      padding: 15px;
    }

    .years {
      font-size: 1.5rem;
    }
  }
</style>