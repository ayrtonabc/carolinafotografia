---
import navigationData from '../data/navigation.json';
---

<header class="header">
  <nav class="nav">
    <div class="container">
      <div class="nav-content">
        <ul class="nav-menu" id="nav-menu">
          {navigationData.menu_items.map(item => (
            <li><a href={item.href} class="nav-link">{item.label}</a></li>
          ))}
        </ul>
        
        <button class="nav-toggle" id="nav-toggle" aria-label={navigationData.mobile_menu_label}>
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </div>
  </nav>
  
  <div class="logo-container">
    <a href="#inicio" class="logo">
      <div class="logo-circle">
        <img src="/image.png" alt={navigationData.logo_alt} />
      </div>
    </a>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(25px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    z-index: 1000;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.05);
  }

  .nav {
    padding: 20px 0;
  }

  .nav-content {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 40px;
    padding-left: 200px;
  }

  .logo-container {
    position: absolute;
    top: 0px;
    left: 120px;
    z-index: 1001;
  }

  .logo {
    display: block;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .logo-circle {
    width: 130px;
    height: 130px;
    border-radius: 50%;
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12), 0 2px 8px rgba(0, 0, 0, 0.08);
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid rgba(255, 255, 255, 0.8);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    position: relative;
  }

  .logo-circle::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.4) 0%, rgba(255, 255, 255, 0.1) 50%, rgba(233, 30, 99, 0.05) 100%);
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .logo-circle img {
    width: 110px;
    height: 110px;
    border-radius: 50%;
    object-fit: cover;
    transition: all 0.3s ease;
  }

  .logo:hover .logo-circle {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15), 0 4px 12px rgba(0, 0, 0, 0.1), 0 0 20px rgba(233, 30, 99, 0.2);
  }

  .logo:hover .logo-circle::before {
    opacity: 1;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: 45px;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    text-decoration: none;
    color: #4a4a4a;
    font-weight: 400;
    font-size: 1.05rem;
    letter-spacing: 1px;
    position: relative;
    padding: 10px 18px;
    border-radius: 25px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-transform: none;
    font-family: 'Playfair Display', serif;
    font-style: italic;
  }

  .nav-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 25px;
    opacity: 0;
    transform: scale(0.9);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(192, 161, 107, 0.2);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 6px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 1px;
    background: var(--color-gold);
    border-radius: 1px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .nav-link:hover {
    color: var(--color-gold);
    transform: translateY(-1px);
    letter-spacing: 1.2px;
  }

  .nav-link:hover::before {
    opacity: 1;
    transform: scale(1);
    background: rgba(255, 255, 255, 0.2);
  }

  .nav-link:hover::after {
    width: 30px;
    background: var(--color-gold);
  }

  .nav-toggle {
    display: none;
    flex-direction: column;
    background: rgba(255, 255, 255, 0.9);
    border: 2px solid rgba(233, 30, 99, 0.2);
    border-radius: 12px;
    cursor: pointer;
    padding: 8px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .nav-toggle:hover {
    background: rgba(233, 30, 99, 0.1);
    border-color: rgba(233, 30, 99, 0.4);
    transform: translateY(-1px);
  }

  .nav-toggle span {
    width: 24px;
    height: 3px;
    background: linear-gradient(90deg, #e91e63, #ff69b4);
    margin: 2px 0;
    border-radius: 2px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @media (max-width: 768px) {
    .header {
      background: rgba(255, 255, 255, 0.97);
      backdrop-filter: blur(30px);
    }

    .nav-content {
      justify-content: flex-end;
      padding: 0 25px;
      max-width: none;
      position: relative;
    }

    .nav {
      padding: 18px 0;
    }

    .logo-circle {
      width: 100px;
      height: 100px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15), 0 4px 12px rgba(0, 0, 0, 0.1), 0 0 15px rgba(233, 30, 99, 0.1);
      border: 3px solid rgba(255, 255, 255, 0.95);
      background: linear-gradient(135deg, #ffffff 0%, #fafafa 50%, rgba(255, 240, 245, 0.8) 100%);
    }

    .logo-circle img {
      width: 85px;
      height: 85px;
    }

    .logo-container {
      top: -5px;
      left: 25px;
      z-index: 1003;
      animation: logoGlow 3s ease-in-out infinite alternate;
    }

    @keyframes logoGlow {
      0% {
        filter: drop-shadow(0 0 5px rgba(233, 30, 99, 0.3));
      }
      100% {
        filter: drop-shadow(0 0 15px rgba(233, 30, 99, 0.5));
      }
    }

    .nav-menu {
      position: fixed;
      top: 100px;
      left: -100%;
      width: 100%;
      height: calc(100vh - 100px);
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(30px);
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      padding-top: 60px;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
      gap: 25px;
      border-top: 1px solid rgba(0, 0, 0, 0.08);
    }

    .nav-menu.active {
      left: 0;
    }

    .nav-link {
      font-size: 1.1rem;
      padding: 16px 32px;
      border-radius: 30px;
      text-transform: none;
      letter-spacing: 0.3px;
      font-weight: 500;
      width: 200px;
      text-align: center;
      background: rgba(255, 255, 255, 0.7);
      border: 1px solid rgba(233, 30, 99, 0.2);
      backdrop-filter: blur(10px);
    }

    .nav-link:hover {
      background: rgba(233, 30, 99, 0.1);
      border-color: rgba(233, 30, 99, 0.4);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(233, 30, 99, 0.2);
    }

    .nav-link::before {
      display: none;
    }

    .nav-link::after {
      display: none;
    }

    .nav-toggle {
      display: flex;
      position: absolute;
      right: 25px;
      top: 50%;
      transform: translateY(-50%);
      z-index: 1002;
    }

    .nav-toggle.active {
      background: rgba(233, 30, 99, 0.15);
      border-color: rgba(233, 30, 99, 0.5);
    }

    .nav-toggle.active span:nth-child(1) {
      transform: rotate(45deg) translate(6px, 6px);
    }

    .nav-toggle.active span:nth-child(2) {
      opacity: 0;
      transform: scale(0);
    }

    .nav-toggle.active span:nth-child(3) {
      transform: rotate(-45deg) translate(6px, -6px);
    }
  }

  @media (max-width: 480px) {
    .nav {
      padding: 15px 0;
    }

    .logo-circle {
      width: 85px;
      height: 85px;
      box-shadow: 0 6px 28px rgba(0, 0, 0, 0.12), 0 3px 8px rgba(0, 0, 0, 0.08), 0 0 12px rgba(233, 30, 99, 0.15);
      border: 2px solid rgba(255, 255, 255, 0.98);
      background: linear-gradient(135deg, #ffffff 0%, #fafafa 50%, rgba(255, 240, 245, 0.9) 100%);
    }

    .logo-circle img {
      width: 72px;
      height: 72px;
    }

    .logo-container {
      left: 20px;
      top: -3px;
      animation: logoGlow 3s ease-in-out infinite alternate;
    }

    .nav-content {
      padding: 0 20px;
    }

    .nav-menu {
      padding-top: 40px;
      gap: 20px;
      top: 95px;
      height: calc(100vh - 95px);
    }

    .nav-link {
      font-size: 1rem;
      padding: 14px 28px;
      width: 180px;
      letter-spacing: 0.2px;
    }

    .nav-toggle {
      padding: 8px;
      border-radius: 12px;
      right: 20px;
    }

    .nav-toggle span {
      width: 22px;
      height: 3px;
    }
  }

  /* Tablet landscape */
  @media (min-width: 769px) and (max-width: 1024px) {
    .nav-content {
      padding: 0 30px;
      padding-left: 180px;
      max-width: 900px;
      justify-content: center;
    }

    .nav-menu {
      gap: 35px;
    }

    .nav-link {
      font-size: 1.05rem;
      padding: 10px 18px;
    }

    .logo-circle {
      width: 110px;
      height: 110px;
    }

    .logo-circle img {
      width: 90px;
      height: 90px;
    }

    .logo-container {
      left: 90px;
      top: -12px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const navToggle = document.getElementById('nav-toggle');
    const navMenu = document.getElementById('nav-menu');
    const navLinks = document.querySelectorAll('.nav-link');

    navToggle?.addEventListener('click', function() {
      navMenu?.classList.toggle('active');
      navToggle.classList.toggle('active');
    });

    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        navMenu?.classList.remove('active');
        navToggle?.classList.remove('active');
      });
    });

    // Smooth scroll for navigation links
    navLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        const targetId = this.getAttribute('href');
        const targetSection = document.querySelector(targetId);
        if (targetSection) {
          const offsetTop = targetSection.offsetTop - 80;
          window.scrollTo({
            top: offsetTop,
            behavior: 'smooth'
          });
        }
      });
    });
  });
</script>